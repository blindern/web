# Fikse priorities i galleriet
SET @num = 0, @gc = 0;
UPDATE gallery_images gi, (
	SELECT gi_id,
		@num := IF(@gc = gi_gc_id, @num + 1, 1) AS new_priority,
		@gc := gi_gc_id AS gc_id,
		gi_priority
	FROM gallery_images
	ORDER BY gi_gc_id, gi_priority
) r
SET gi.gi_priority = r.new_priority
WHERE gi.gi_id = r.gi_id